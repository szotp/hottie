    "version": "0.2.0",
    "configurations": [
        {
            "console": "terminal",
            "name": "example",
            "request": "launch",
            "type": "dart",
            "program": "bin/hottie.dart",
            "env": {
                "FLUTTER_ROOT": "${workspaceFolder}/.fvm/flutter_sdk"
            },
            "args": [
                "test",
            ]
        },
        {
            "name": "example (directly)",
            "request": "launch",
            "type": "dart",
            // or flutter run example/test/main_hottie.dart -d flutter-tester
            "program": "example/test/main_hottie.dart",
            "deviceId": "flutter-tester"
        }
    ]
}