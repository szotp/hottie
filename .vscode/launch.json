{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "console": "terminal",
            "name": "hottie watch",
            "request": "launch",
            "type": "dart",
            "program": "packages/hottie/bin/hottie.dart",
            "cwd": "${workspaceFolder}",
            "env": {
                "PATH": "${env:PATH}:${workspaceFolder}/.fvm/flutter_sdk/bin"
            },
            "preLaunchTask": "cleanup",
            "args": [
                "watch",
            ]
        },
        {
            "name": "example (app)",
            "request": "launch",
            "type": "dart",
            "program": "packages/example/lib/main.dart",
            "deviceId": "flutter-tester"
        },
        {
            "name": "main_hottie",
            "request": "launch",
            "type": "dart",
            "program": "build/hottie_main.dart",
            "deviceId": "flutter-tester",
        }
    ]
}