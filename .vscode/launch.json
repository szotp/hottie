    "version": "0.2.0",
    "configurations": [
        {
            "name": "example",
            "request": "launch",
            "type": "dart",
            "program": "../bin/hottie.dart",
            "cwd": "example",
            "env": {
                "PATH": "${env:PATH}:${workspaceFolder}/.fvm/flutter_sdk/bin"
            },
            "preLaunchTask": "cleanup",
            "args": [
                "-v",
                "run",
                "test/file_2_test.dart"
            ]
        },
        {
            "name": "example (directly)",
            "request": "launch",
            "type": "dart",
            // or flutter run example/test/main_hottie.dart -d flutter-tester
            "program": "example/test/main_hottie.dart",
            "deviceId": "flutter-tester"
        }
    ]
}